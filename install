#!/bin/bash

echo "######################"
echo "# dotfiles Installer #"
echo "######################"
echo "    for Arch Linux    "
echo "**********************"

sudo pacman --needed -S youtube-dl engrampa nmap geany base-devel vim ncmpcpp mpd mpc xcompmgr xwallpaper xclip newsboat ranger zathura r qutebrowser tcl tk mpv libpng libjpeg-turbo webkit2gtk gtk2 gtk3 gtkmm gtkmm3 wxgtk-common wxgtk3 grc gst-libav gst-plugins-good maim
cp -rf .* $HOME
cp -rf Pictures/* $HOME/Pictures/
rm -rf $HOME/.git
xrdb $HOME/.Xresources
mkdir ~/Mount
mkdir ~/Mount/Drive
mkdir ~/Mount/Drive2
mkdir ~/Mount/Drive3
mkdir ~/Mount/MTP
mkdir ~/Mount/USB
mkdir ~/Mount/USB2
mkdir ~/Mount/USB3
mkdir ~/Documents/PDF
mkdir ~/Documents/Markdown
mkdir ~/Documents/Disks
mkdir ~/Documents/Archives
mkdir ~/Documents/Word
mkdir ~/Documents/Powerpoint
mkdir ~/Documents/Excel
mkdir ~/Repositories
mkdir ~/Pictures/Screenshots
