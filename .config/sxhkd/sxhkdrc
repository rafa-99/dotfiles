#
# wm independent hotkeys
#

# terminal emulator
super + Return
	st

# program launcher
super + d
	dmenu_run

# music selector
super + m
	~/.config/scripts/musicselect

# glyph selector
super + e
	~/.config/scripts/glypher

# quick file open
super + i
	~/.config/scripts/quickopen

# drive mounter
super + shift + d
	~/.config/scripts/mounter

# drive umounter
super + shift + u
	~/.config/scripts/umounter

# driver formater
super + shift + f
	~/.config/scripts/formater

# window flash
super + z
	~/.config/scripts/flash

# shutdown timer
super + shift + t
	~/.config/scripts/shutdowntimer

# screen recorder
super + shift + F9
	~/.config/scripts/screenrecord

# stop screen recording 
super + shift + F10
	killall ffmpeg

# music pause/play
super + F9
	mpc toggle

# music stop
super + F10
	mpc stop

# music previous
super + F11
	mpc prev

# music next
super + F12
	mpc next

# web browser
super + w
	tabbed surf -e

# printer manager
super + p
	system-config-printer

# network manager
super + n
	nm-connection-editor

# alsamixer
super + a
	st -e alsamixer

# file manager
super + f
	st -e vifm

# music player
super + shift + m
	mpd & st -e ncmpcpp

# suspend and screen lock
super + shift + s
	systemctl suspend && slock

# shutdown computer
super + shift + p
	shutdown now

# take screenshot
Print
	maim ~/Pictures/Screenshots/screenshot-$(date '+%Y%m%d_%H%M%S').png

# reduce screen brightness
XF86MonBrightnessDown
	sudo brightnessctl set 10%-

# increase screen brightness
XF86MonBrightnessUp
	sudo brightnessctl set +10%

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {x,r}
	bspc {quit,wm -r}

# close and kill
super + shift + q
	bspc node -{c,k}

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd

# alternate between the tiled and monocle layout
super + alt + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
#super + g
#	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,alt + t,space,alt + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west && bash ~/.config/scripts/flash,south && bash ~/.config/scripts/flash,north && bash ~/.config/scripts/flash,east && bash ~/.config/scripts/flash}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {comma,period}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
#super + {grave,Tab}
#        bspc {node,desktop} -f last

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
#super + ctrl + shift + space
#	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
