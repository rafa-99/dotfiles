#!/bin/sh

#A menu who selects a a song from mpc playlist

#Listing Playlist  |# in| Replace Tab w/space| Outputs menu 20| prints the song #| Plays the song #
if ! pgrep mpd > /dev/null
then
	mpd
fi
mpc playlist | nl | sed 's:\t:     :g' | dmenu -i -c -l 20 | awk '{print $1}' | xargs -I {} mpc play "{}"
