#!/bin/sh

# Screenshot Tool Script
INPUT=$(printf "Screen\nSelection" | dmenu -i -p "Screenshot:")

case "$INPUT" in
	Screen)
		sleep 1.5 && scrot -q 100 ~/Pictures/Screenshots/screenshot-"$(date '+%Y%m%d_%H%M%S')".png
		;;
	Selection)
		scrot -s -q 100 ~/Pictures/Screenshots/screenshot-"$(date '+%Y%m%d_%H%M%S')".png
		;;
esac
