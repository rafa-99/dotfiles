#!/bin/sh

# Screenshot Tool Script
INPUT=$(printf "Screen\nSelection" | dmenu -i -p "Screenshot:")

case "$INPUT" in
	Screen)
		scrot -q 100 ~/Pictures/Screenshots/screenshot-"$(date '+%Y%m%d_%H%M%S')".png
		;;
	Selection)
		scrot -l style=solid,width=1 -s -q 100 ~/Pictures/Screenshots/screenshot-i"$(date '+%Y%m%d_%H%M%S')".png
		;;
esac
