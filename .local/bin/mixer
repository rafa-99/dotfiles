#!/bin/sh

# Pulseaudio or Alsa audio binds
case $1 in
	"+")
		if [ -f /bin/pamixer ]; then
			pamixer -i 5
		elif
			[ -f /bin/amixer ]; then
			amixer set Master 5%+
		fi
		;;
	"-")
		if [ -f /bin/pamixer ]; then
			pamixer -d 5
		elif
			[ -f /bin/amixer ]; then
			amixer set Master 5%-
		fi
		;;
	t)
		if [ -f /bin/pamixer ]; then
			pamixer -t
		elif
			[ -f /bin/amixer ]; then
			amixer set Master toggle
		fi
esac
