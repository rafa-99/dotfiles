#!/bin/sh

# Pulseaudio or Alsa audio binds
case $1 in
	"+")
		if [ -f /usr/bin/pulsemixer ]; then
			pulsemixer --change-volume +5
		elif
			[ -f /usr/bin/amixer ]; then
			amixer set Master 5%+
		fi
		;;
	"-")
		if [ -f /usr/bin/pulsemixer ]; then
			pulsemixer --change-volume +5
		elif
			[ -f /usr/bin/amixer ]; then
			amixer set Master 5%-
		fi
		;;
	t)
		if [ -f /usr/bin/pulsemixer ]; then
			pulsemixer --toggle-mute
		elif
			[ -f /usr/bin/amixer ]; then
			amixer set Master toggle
		fi
esac
