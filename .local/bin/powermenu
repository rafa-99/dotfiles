#!/bin/sh

OPERATION=$(printf "Reboot\nShutdown\nSuspend" | dmenu -i -p "Power Menu:")

case $OPERATION in
	Reboot)
		doas reboot
		;;
	Shutdown)
		doas poweroff
		;;
	Suspend)
		case $INIT in
			openrc)
				loginctl suspend ; slock
				;;
			runit)
				doas zzz ; slock
				;;
			systemd)
				doas systemctl suspend ; slock
		esac
esac
