#!/bin/sh

OPERATION=$(printf "Reboot\nShutdown\nSuspend" | dmenu -i -p "Power Menu:")

case $OPERATION in
	Reboot)
		doas reboot
		;;
	Shutdown)
		doas poweroff
		;;
	Suspend)
		if [ "$DISTRO" = "gentoo" ]; then
			doas pm-suspend ; slock
		elif [ "$DISTRO" = "arch" ]; then
			systemctl suspend ; slock
		else
			slock
		fi
esac
